<%= render partial: 'shared/navbar' %>
<div class="container">
  <div class="card h-100 row align-items-center text-center mt-5 shadow-lg" style="width: 18rem;">
    <%= image_tag(url_for(@current_user.profile_picture), class: 'card-img-top', style: 'width: 18rem;')%>
    <div class="card-body" style="width: 100%">
      <h5 class="card-title"><%= @current_user.name %></h5>
      <p class="card-text">
          Plays: <%= @current_user.instrument %>
          <%= audio_tag(url_for(@current_user.clip), controls: true, style: "width: 100%;") %>
      </p>
    </div>
  </div>
</div>
